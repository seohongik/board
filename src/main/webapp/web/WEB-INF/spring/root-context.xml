<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mybatise-spring="http://mybatis.org/schema/mybatis-spring"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	
    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="org.mariadb.jdbc.Driver"/>
		<property name="url" value="jdbc:mariadb://localhost/board"/>
		<property name="username" value="hongcha89Id"/>
		<property name="password" value="hongcha89Pw"/>
	</bean>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="configLocation" value="classpath:/mybatisConfig.xml"/>
        <property name="mapperLocations" value="classpath:/mappers/**/*.xml" />

    </bean>
    <bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="sqlSessionFactory" />
    </bean>
   
    <bean id="boardAuthDAO" class="com.wings.board.dao.BoardAuthDAO">
    	<property name="sqlSessionTemplate" ref="sqlSessionTemplate"/>  
    </bean>
    
    <bean id="boardCrudDAO" class="com.wings.board.dao.BoardCrudDAO">
    	<property name="sqlSessionTemplate" ref="sqlSessionTemplate"/>  
    </bean>
        
    <bean id="boardAuthService" class="com.wings.board.serviceImpl.BoardAuthServiceImpl">
    	<property name="boardAuthDAO" ref="boardAuthDAO"/>  
    </bean>

	<bean id="boardCrudService" class="com.wings.board.serviceImpl.BoardCrudServiceImpl">
    	<property name="boardCrudDAO" ref="boardCrudDAO"/>  
    </bean>
    

</beans>